{% extends 'layout.html.twig' %}

{% block content %}
 <main class="app-content">
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-users"></i>&nbsp;Métiers</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('main_index') }}"><i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">Métiers</li>
                </ul>
            </div>
            <div class="tile pb-5">
                <a href="{{ path('profession_form', {'id': 0}) }}" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un métier</a>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Intitulé</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for profession in professions %}
                            <tr>
                                <td>{{ profession.title }}</td>
                                <td>
                                    <a href="{{ path('profession_form', {'id': profession.id }) }}" class="btn btn-info btn-sm">
                                        <i class="fa fa-pencil mr-0"></i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <hr/>
                <nav class="float-right">
                    {{ knp_pagination_render(professions, 'pagination.html.twig') }}
                </nav>
            </div>
        </main>
{% endblock %}