{% extends 'layout.html.twig' %}

{% block content %}
<main class="app-content">
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-users"></i>&nbsp;Edition d'un projet</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('main_index') }}"><i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('project_list') }}">Projet</a>
                    </li>
                    <li class="breadcrumb-item">Edition d'un projet</li>
                </ul>
            </div>
            <div class="tile">
                    <div class="alert alert-dismissible alert-success my-4">
                        <button class="close" type="button" data-dismiss="alert">×</button><strong>Well done!</strong> Message flash.
                    </div>
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    <section>
                        <h3>Informations générales</h3>
                        <div class="row mt-4">
                            <div class="offset-md-4 col-md-8">
                                <div class="form-group row">
                                        {{ form_label(form.name, null,{'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                                    <div class="col-md-9">
                                        {{ form_errors(form.name, {'attr': {'class': 'form-control-feedback text-danger'}}) }}
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': form.name.vars.label}}) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    {{ form_label(form.description, null,{'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                                    <div class="col-md-9">
                                        {{ form_errors(form.description, {'attr': {'class': 'form-control-feedback text-danger'}}) }}
                                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': form.description.vars.label}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <hr/>
                    <section>
                        <h3>Production</h3>
                        <div class="row mt-4">
                            <div class="offset-md-4 col-md-8">
                                <div class="form-group row">
                                    {{ form_label(form.sellPrice, null,{'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                                    <div class="col-md-9">
                                        {{ form_errors(form.sellPrice, {'attr': {'class': 'form-control-feedback text-danger'}}) }}
                                        {{ form_widget(form.sellPrice, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <hr/>
                    <div class="row">
                        <div class="offset-md-6 col-md-6">
                            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</a>
                        </div>
                    </div>

                {{ form_end(form) }}
            </div>
        </main>
{% endblock %}